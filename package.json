{
    "name": "emiTS",
    "version": "0.1.0",
    "description": "A typesafe event emitter POC",
    "type": "module",
    "main": "./dist/emits.umd.cjs",
    "module": "./dist/emits.js",
    "types": "./dist/index.d.ts",
    "repository": {
      "type": "git",
      "url": "https://github.com/abdullahcanakci/emiTS.git"
    },
    "exports": {
      ".": {
        "import": "./dist/emits.js",
        "require": "./dist/emits.umd.cjs",
        "types": "./dist/index.d.ts"
      }
    },
    "files": [
      "dist"
    ],
    "scripts": {
      "dev": "vite",
      "build": "tsc && vite build",
      "preview": "vite preview",
      "test": "vitest run",
      "test:watch": "vitest",
      "lint": "eslint src --ext ts",
      "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
      "typescript",
      "library",
      "node",
      "browser"
    ],
    "author": "Abdullah Canakci",
    "license": "MIT",
    "devDependencies": {
      "@types/node": "^20.11.0",
      "@typescript-eslint/eslint-plugin": "^6.18.0",
      "@typescript-eslint/parser": "^6.18.0",
      "eslint": "^8.56.0",
      "prettier": "^3.1.1",
      "typescript": "^5.3.3",
      "vite": "^5.0.11",
      "vite-plugin-dts": "^3.7.0",
      "vitest": "^1.1.3"
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }